{% schema %}
{
  "name": "Carrusel Banners",
  "settings": [
    {
      "type": "header",
      "content": "Banners de Escritorio"
    },
    {
      "type": "image_picker",
      "id": "banner_pc_1",
      "label": "Banner PC 1"
    },
    {
      "type": "image_picker",
      "id": "banner_pc_2",
      "label": "Banner PC 2"
    },
    {
      "type": "image_picker",
      "id": "banner_pc_3",
      "label": "Banner PC 3"
    },
    {
      "type": "header",
      "content": "Banners de Móvil"
    },
    {
      "type": "image_picker",
      "id": "banner_movil_1",
      "label": "Banner Móvil 1"
    },
    {
      "type": "image_picker",
      "id": "banner_movil_2",
      "label": "Banner Móvil 2"
    },
    {
      "type": "image_picker",
      "id": "banner_movil_3",
      "label": "Banner Móvil 3"
    },
    {
      "name": "Carrusel Banners",
      "settings": [],
      "presets": [
        {
          "name": "Carrusel Banners",
          "category": "Banners"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="carrusel-container">
  <!-- Versión PC -->
  <div class="carrusel carrusel-pc">
    {% if section.settings.banner_pc_1 %}
      <div class="slide">
        {{ section.settings.banner_pc_1 | image_url: width: 1600 | image_tag: alt: 'Banner PC 1' }}
      </div>
    {% endif %}
    {% if section.settings.banner_pc_2 %}
      <div class="slide">
        {{ section.settings.banner_pc_2 | image_url: width: 1600 | image_tag: alt: 'Banner PC 2' }}
      </div>
    {% endif %}
    {% if section.settings.banner_pc_3 %}
      <div class="slide">
        {{ section.settings.banner_pc_3 | image_url: width: 1600 | image_tag: alt: 'Banner PC 3' }}
      </div>
    {% endif %}
  </div>

  <!-- Versión Móvil -->
  <div class="carrusel carrusel-movil">
    {% if section.settings.banner_movil_1 %}
      <div class="slide">
        {{ section.settings.banner_movil_1 | image_url: width: 800 | image_tag: alt: 'Banner Móvil 1' }}
      </div>
    {% endif %}
    {% if section.settings.banner_movil_2 %}
      <div class="slide">
        {{ section.settings.banner_movil_2 | image_url: width: 800 | image_tag: alt: 'Banner Móvil 2' }}
      </div>
    {% endif %}
    {% if section.settings.banner_movil_3 %}
      <div class="slide">
        {{ section.settings.banner_movil_3 | image_url: width: 800 | image_tag: alt: 'Banner Móvil 3' }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .carrusel-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .carrusel {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }
  .carrusel img {
    width: 100%;
    display: block;
  }
  .carrusel-pc {
    display: none;
  }
  .carrusel-movil {
    display: none;
  }

  /* Mostrar solo en desktop */
  @media (min-width: 768px) {
    .carrusel-pc {
      display: flex;
    }
  }

  /* Mostrar solo en móvil */
  @media (max-width: 767px) {
    .carrusel-movil {
      display: flex;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function iniciarCarrusel(selector) {
      const carrusel = document.querySelector(selector);
      if (!carrusel) return;

      let index = 0;
      const slides = carrusel.querySelectorAll('.slide');
      const total = slides.length;

      setInterval(() => {
        index = (index + 1) % total;
        carrusel.style.transform = `translateX(-${index * 100}%)`;
      }, 1000); // 1s por slide
    }

    iniciarCarrusel('.carrusel-pc');
    iniciarCarrusel('.carrusel-movil');
  });
</script>
